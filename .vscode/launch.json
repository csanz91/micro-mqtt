{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout=999999",
                "${workspaceRoot}/bin/test/*.js"
                ],
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/bin/module/*.js", "${workspaceRoot}/bin/test/*.js" ]
        }
    ]
}